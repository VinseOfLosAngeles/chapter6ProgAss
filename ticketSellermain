package ticketseller;
import java.util.Scanner;
/**
 *
 * @author Vincent Porras
 */
public class TicketSeller 
{
    public static void main(String[] args) 
    {
        Scanner in = new Scanner(System.in);
        ticketHandler cinemaTickets = new ticketHandler(100, 4);
        System.out.println("Get your tickets, they'll be gone before you know it!");
        
        //int remainingTickets = cinemaTickets.getAvailableTickets();
        while (cinemaTickets.getAvailableTickets() > 0)
        {
            System.out.print("Enter the number of tickets you want to buy: ");
            int ticketsOrdered = in.nextInt();
            if (cinemaTickets.getAvailableTickets() - ticketsOrdered >= 0)
            {
                cinemaTickets.purchaseTickets(ticketsOrdered);
                if (cinemaTickets.getAvailableTickets() > 0)
                {System.out.println("The number of tickets available is " + cinemaTickets.getAvailableTickets() + ".");}
            }
            else
            {System.out.println("Sorry, you may only purchase " + cinemaTickets.getAvailableTickets() + ".");}
            
        }    
        System.out.println("Sold out!");
        System.out.println("There were " + cinemaTickets.getBuyers() + " buyers.");
    }
    
}
}
